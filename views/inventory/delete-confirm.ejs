<main>
  <div class="inventory-form-container">
    <h1><%= title %></h1>

    <!-- Display flash message if any -->
    <% if (message) { %>
      <p class="flash-success"><%= message %></p>
    <% } %>

    <p class="notice">
      Confirm Deletion â€“ This action is permanent and cannot be undone.
    </p>

    <form action="/inv/delete" method="POST">
      <!-- Hidden inventory ID -->
      <input type="hidden" name="inv_id" value="<%= vehicle.inv_id %>">

      <!-- Readonly fields for info -->
      <label for="inv_make">Make</label>
      <input type="text" id="inv_make" name="inv_make" value="<%= vehicle.inv_make %>" readonly>

      <label for="inv_model">Model</label>
      <input type="text" id="inv_model" name="inv_model" value="<%= vehicle.inv_model %>" readonly>

      <label for="inv_year">Year</label>
      <input type="text" id="inv_year" name="inv_year" value="<%= vehicle.inv_year %>" readonly>

      <label for="inv_price">Price</label>
      <input type="number" id="inv_price" name="inv_price" value="<%= vehicle.inv_price %>" readonly>

      <button type="submit">Delete Vehicle</button>
    </form>
  </div>
</main>
