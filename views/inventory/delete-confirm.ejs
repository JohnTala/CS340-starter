<main>
  <div class="inventory-form-container">
    <h1><%= title %></h1>

    <p class="notice">
      Confirm Deletion â€“ This action is permanent and cannot be undone.
    </p>

    <form action="/inv/delete" method="post">

      <!-- Hidden inventory ID -->
      <input 
        type="hidden" 
        name="inv_id" 
        value="<%= inv_id %>"
      >

      <!-- Make -->
      <label for="inv_make">Make</label>
      <input
        type="text"
        id="inv_make"
        name="inv_make"
        value="<%= inv_make || '' %>"
        readonly
      >

      <!-- Model -->
      <label for="inv_model">Model</label>
      <input
        type="text"
        id="inv_model"
        name="inv_model"
        value="<%= inv_model || '' %>"
        readonly
      >

      <!-- Year -->
      <label for="inv_year">Year</label>
      <input
        type="text"
        id="inv_year"
        name="inv_year"
        value="<%= inv_year || '' %>"
        readonly
      >

      <!-- Price -->
      <label for="inv_price">Price</label>
      <input
        type="number"
        id="inv_price"
        name="inv_price"
        value="<%= inv_price || '' %>"
        readonly
      >

      <button type="submit">Delete</button>
    </form>
  </div>
</main>
