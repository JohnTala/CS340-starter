<main>
  <div class="inventory-form-container">
    <h1><%= title %></h1>

    <!-- Display validation errors -->
    <% if (errors && errors.length > 0) { %>
      <ul class="error-list">
        <% errors.forEach(error => { %>
          <li><%= error.msg %></li>
        <% }) %>
      </ul>
    <% } %>

    <!-- Display flash success message -->
    <% if (message) { %>
      <p class="flash-success"><%= message %></p>
    <% } %>

    <form action="/inv/update" method="POST">

      <!-- Hidden inventory ID -->
      <input type="hidden" name="inv_id" value="<%= vehicle.inv_id %>">

      <!-- Classification Dropdown -->
      <label for="classification_id">Classification</label>
      <%- classificationSelect %>

      <!-- Make -->
      <label for="inv_make">Make</label>
      <input
        type="text"
        id="inv_make"
        name="inv_make"
        value="<%= vehicle.inv_make || '' %>"
        required
        pattern="[A-Za-z0-9 ]+"
      >

      <!-- Model -->
      <label for="inv_model">Model</label>
      <input
        type="text"
        id="inv_model"
        name="inv_model"
        value="<%= vehicle.inv_model || '' %>"
        required
        pattern="[A-Za-z0-9 ]+"
      >

      <!-- Year -->
      <label for="inv_year">Year</label>
      <input
        type="text"
        id="inv_year"
        name="inv_year"
        value="<%= vehicle.inv_year || '' %>"
        required
        pattern="\d{4}"
      >

      <!-- Description -->
      <label for="inv_description">Description</label>
      <textarea id="inv_description" name="inv_description" required rows="4"><%= vehicle.inv_description || '' %></textarea>

      <!-- Image Path -->
      <label for="inv_image">Image Path</label>
      <input type="text" id="inv_image" name="inv_image" value="<%= vehicle.inv_image || '/images/vehicles/no-image.png' %>">

      <!-- Thumbnail Path -->
      <label for="inv_thumbnail">Thumbnail Path</label>
      <input type="text" id="inv_thumbnail" name="inv_thumbnail" value="<%= vehicle.inv_thumbnail || '/images/vehicles/no-image-tn.png' %>">

      <!-- Price -->
      <label for="inv_price">Price</label>
      <input type="number" id="inv_price" name="inv_price" value="<%= vehicle.inv_price || '' %>" required min="0" step="0.01">

      <!-- Miles -->
      <label for="inv_miles">Miles</label>
      <input type="number" id="inv_miles" name="inv_miles" value="<%= vehicle.inv_miles || '' %>" required min="0">

      <!-- Color -->
      <label for="inv_color">Color</label>
      <input type="text" id="inv_color" name="inv_color" value="<%= vehicle.inv_color || '' %>" required>

      <!-- Status Dropdown -->
      <label for="inv_status">Status</label>
      <select id="inv_status" name="inv_status" required>
        <% statusOptions.forEach(option => { %>
          <option value="<%= option %>" <%= vehicle.inv_status === option ? 'selected' : '' %>><%= option %></option>
        <% }) %>
      </select>

      <button type="submit">Update Vehicle</button>
    </form>
  </div>
</main>
