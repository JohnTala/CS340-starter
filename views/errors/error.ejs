<div class="error-page">
  <!-- Animated error face -->
  <div class="face">
    <div class="band">
      <div class="red"></div>
      <div class="white"></div>
      <div class="blue"></div>
    </div>
    <div class="eyes"></div>
    <div class="dimples"></div>
    <div class="mouth"></div>
  </div>

  <!-- Error title -->
  <h1>Oops! Something went wrong!</h1>
  <h2><%= title %></h2>

  <!-- Error message from server -->
  <p><%- message %></p>

  <!-- Return home button -->
  <div class="btn" onclick="location.href='/'">Return to Home</div>
</div>
