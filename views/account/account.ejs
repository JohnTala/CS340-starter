<main class="account-main">
  <h1><%= title %></h1>

  <!-- Success Message -->
  <% if (message) { %>
    <div class="flash-success"><%= message %></div>
  <% } %>

  <!-- Account Section -->
  <section class="account-info">
    <h2>Account Information</h2>

    <p><strong>First Name:</strong> <%= account_firstname || "N/A" %></p>
    <p><strong>Account Type:</strong> <%= account_type || "Client" %></p>

    <!-- Edit Account Link -->
    <p>
      <a href="/account/update/<%= account_id %>" class="edit-link">
        Edit Account Information
      </a>
    </p>
  </section>
</main>
